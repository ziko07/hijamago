/* Update single listing page links */
$("#listing-message-links").html("<%=raw escape_javascript(render(:partial => 'listings/listing_actions')) %>");

/* Highlight action */
$("#listing-message-links").effect("highlight", {}, 2000);

/* Update profile listing page links */
$("#edit-profile-listing-links-" + <%= @listing.id.to_s %>).html("<%=raw escape_javascript(render(:partial => 'listings/edit_profile_listing_links', :locals => { :listing => @listing })) %>");

/* Close comment form */
$("#comment-form").html("<%=raw escape_javascript(render(:partial => 'listings/comment_form')) %>");
