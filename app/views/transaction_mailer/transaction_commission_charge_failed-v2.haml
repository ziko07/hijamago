- transaction_link = link_to t("emails.transaction_commission_charge_failed.transaction_about",
  listing_title: @transaction.listing.title),
  admin2_transactions_reviews_manage_transaction_url(@url_params.merge(id: @transaction.id))

%tr
  %td.person-name
    %h1
      - seller = PersonViewUtils.person_display_name(@transaction.listing_author, @community)
      = t("emails.transaction_commission_charge_failed.the_commission_of_the_transaction",
        transaction_link: transaction_link, seller: seller).html_safe

%tr
  %td.email-content
    %p.text-bold
      = t("emails.transaction_commission_charge_failed.this_usually_means")

%tr
  %td.email-content
    %p.text-bold
      = t("emails.transaction_commission_charge_failed.if_you_would_like_to_investigate")

- url = person_url(@url_params.merge(username: @transaction.listing_author.username))
= render "person_mailer/action_button-v2", text: t("emails.transaction_commission_charge_failed.contact_the_seller"), url: url
= render 'person_mailer/cant_click', url: url
