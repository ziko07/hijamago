%tr
  %td.person-name
    %h1= t("emails.common.hi", name: PersonViewUtils.person_display_name_for_type(@recipient, 'first_name_only'))

%tr
  %td.email-content
    %p
      - contact_link = link_to t("emails.listing_rejected.contact_link", community: @community_name), @contact_url
      = t("emails.listing_rejected.listing_has_been_rejected",
        listing_title: @listing.title,
        community: @community_name,
        contact_link: contact_link).html_safe

= render "action_button-v2", text: t("emails.listing_rejected.edit_the_listing"), url: @listing_url
= render 'person_mailer/cant_click', url: @listing_url
