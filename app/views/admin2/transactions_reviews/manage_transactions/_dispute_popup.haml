#transactionDisputeModal.modal{'aria-hidden' => 'true', 'aria-labelledby' => 'transactionDisputeModalLabel', 'data-backdrop' => 'static', role: 'dialog', tabindex: '-1'}
  .modal-dialog.modal-md{role: :document}
    = form_tag cancel_admin2_transactions_reviews_manage_transaction_path(transaction), method: :patch, class: %i[modal-content] do
      .modal-header
        %h2#transactionDisputeModalLabel.modal-title= t('admin2.manage_transactions.popups.dispute.title')
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', :type => 'button'}
          %span{'aria-hidden' => 'true'} Ã—
      .modal-body
        = t('admin2.manage_transactions.popups.dispute.body', transaction: transaction.id)
      .modal-footer
        = link_to t('admin2.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
        = button_tag t('admin2.manage_transactions.popups.dispute.submit'), class: %i[btn btn-primary]
