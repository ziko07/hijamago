%form.content-card-section-form
  = render 'admin2/general/domains/header'
  %section.content-card-section
    %h2= t('admin2.domain.custom_domain')
    %p.ingress
      = t('admin2.domain.set_custom_domain_info', url: 'https://help.sharetribe.com/en/articles/666106').html_safe
    .form-group
      = label_tag :marketplaceName, t('admin2.domain.custom_domain')
      .statusbar.negative
        %span
          %strong= t('admin2.domain.dns_not_configured', domain: @presenter.domain_checked)
          %ul{:style => "margin-top: 8px"}
            %li
              = t('admin2.domain.main_domain')
              %strong= @presenter.domain_checked
              \-
              = t('admin2.domain.error')
              %ul
                %li= t('admin2.domain.main_domain_error')
            %li
              = t('admin2.domain.redirect')
              %strong= @presenter.domain_checked_for_redirect
              \-
              = t('admin2.domain.error')
              %ul
                %li= t('admin2.domain.redirect_error')
          = t('admin2.domain.follow_instructions', url: 'https://help.sharetribe.com/en/articles/666106').html_safe
        = link_to t('admin2.domain.retest_dns', domain: @presenter.domain_checked), test_dns_admin2_general_domains_path, remote: true, class: %i[btn-sm btn-secondary], style: 'margin-top: 16px'
      %input#marketplaceName.form-control{disabled: true, placeholder: 'www.example.com', type: 'text', value: @presenter.domain_checked}
      %small#customDomain-help.form-text
        = link_to t('admin2.domain.check_another_domain'), reset_domain_setup_admin2_general_domains_path

= render 'admin2/general/domains/test_dns_popup', btn_text: t('admin2.domain.test_dns_popup.button_2'), url: recheck_domain_setup_admin2_general_domains_path
