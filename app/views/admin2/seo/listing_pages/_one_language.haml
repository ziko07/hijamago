= form.fields_for :community_customizations, customization do |cc|
  .form-group
    = cc.label :listing_meta_title, t('admin2.listing_pages.listing_meta_title')
    = cc.text_field :listing_meta_title, maxlength: 255, class: %i[form-control], placeholder: t('admin2.listing_pages.listing_meta_title_placeholder', locale: cc.object.locale),
                                 allowed_template_variables: @seo_service.variables(:listing_meta_title).join(','),
                                'data-msg-allowed_template_variables': t('admin2.seo.only_supported_variables'), autocomplete: :off
    %small.form-text
      = t('admin2.listing_pages.listing_meta_title_info_text', vars: @seo_service.i18n_variables_admin2(:listing_meta_title)).html_safe
  .form-group
    = cc.label :listing_meta_description, t('admin2.listing_pages.listing_meta_description')
    = cc.text_area :listing_meta_description, maxlength: 65535, class: %i[form-control], placeholder: t('admin2.listing_pages.listing_meta_description_placeholder', locale: cc.object.locale),
                                 allowed_template_variables: @seo_service.variables(:listing_meta_description).join(','),
                                'data-msg-allowed_template_variables': t('admin2.seo.only_supported_variables'), autocomplete: :off
    %small.form-text
      = t('admin2.listing_pages.listing_meta_description_info_text', vars: @seo_service.i18n_variables_admin2(:listing_meta_description)).html_safe
