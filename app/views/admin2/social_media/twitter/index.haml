- content_for :title do
  = t('admin2.sidebar.social_media.twitter')

.content-card-header
  %h1.content-card-header-title
    = t('admin2.sidebar.social_media.twitter')

.content-card-section-container
  = form_for @current_community, url: update_twitter_admin2_social_media_twitter_index_path, html: { class: %i[content-card-section-form], remote: true }, method: :patch do |form|
    %section.content-card-section
      %h2
        = t('admin2.twitter.twitter_settings')
      .form-group
        = form.label :twitter_handle, t('admin2.twitter.twitter_handle')
        = form.text_field :twitter_handle, class: %i[form-control], placeholder: t('admin2.twitter.yourhandle')
        %small#twitterHandle-help.form-text
          = t('admin2.twitter.twitter_handle_info_text')
    %section.content-card-terminal
      = render 'admin2/submit_button', caption: t('admin2.save_changes')

- content_for :extra_javascript do
  :javascript
    admin2_social_media_form("#{@current_community.id}", "#{t('admin2.signup_login.invalid_twitter_handle')}", "#{t('admin2.signup_login.invalid_facebook_connect_id')}", "#{t('admin2.signup_login.invalid_facebook_connect_secret')}" );
