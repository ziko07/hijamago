<% if @exist_id %>
  $('#custom_option_<%= @exist_id %>').html('<%= j render 'admin2/users/user_fields/option_attributes', data: @data %>');
<% else %>
  var elem;
  if ($('#optionsListEdit').length) {
      elem = $('#optionsListEdit');
  } else {
      elem = $('#optionsList');
  }
  elem.append('<%= j render 'admin2/users/user_fields/field_options', data: @data %>');
  $(".add-new-unit-content").hide(0);
  $("#new-option-trigger").show(0);
  $('.add-new-unit-content input').val('');
  updateSort();
<% end %>
