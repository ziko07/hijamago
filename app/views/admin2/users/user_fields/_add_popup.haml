#userFieldsAddModal.modal{'data-backdrop' => 'static', 'aria-hidden' => true, 'aria-labelledby' => 'userFieldsAddModalLabel', role: :dialog, tabindex: '-1'}
  .modal-dialog.modal-lg{role: :document}
    .modal-content
      .content-card-section-form
        .modal-header
          %h2#userFieldsAddModalLabel.modal-title
            = t('admin2.user_fields.add_new_user_field')
          %button.close{'aria-label' => 'Close', 'data-dismiss' => :modal, type: :button}
            %span{'aria-hidden' => true} Ã—
        .modal-body
          .form-group
            = label_tag :field_type, t('admin2.user_fields.new_user_field_type')
            = select_tag :field_type, options_for_select(custom_field_dropdown_options_admin2(CustomField::VALID_TYPES)), class: %i[form-control], data: {url: new_admin2_users_user_field_path}
          #body_type
        .modal-footer
          = link_to t('admin2.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
          = button_tag t('admin2.user_fields.save_new_user_field'), class: %i[btn btn-primary submit-listing-field-form], disabled: true
