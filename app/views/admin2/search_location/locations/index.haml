- content_for :title do
  = t('admin2.sidebar.search_location.location')

.content-card-header
  %h1.content-card-header-title
    = t('admin2.sidebar.search_location.location')
.content-card-section-container
  = form_for @current_community, url: update_location_admin2_search_location_locations_path, html: { class: %i[content-card-section-form], remote: true }, method: :patch do |form|
    %section.content-card-section
      %h2
        = t('admin2.location.location_settings')
      %p.ingress
        = t('admin2.location.location_settings_info_text')
      .form-group
        .form-check
          = form.check_box :show_location, class: %i[form-check-input]
          = form.label :show_location, t('admin2.location.show_location'), class: %i[form-check-label]
        .form-check
          = form.check_box :fuzzy_location, class: %i[form-check-input], disabled: !@current_community.show_location?
          = form.label :fuzzy_location, t('admin2.location.fuzzy_location'), class: %i[form-check-label]
    %section.content-card-terminal
      = render 'admin2/submit_button', caption: t('admin2.save_changes')
