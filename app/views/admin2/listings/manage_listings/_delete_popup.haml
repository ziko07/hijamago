#listingDeleteModal.modal{'data-backdrop' => 'static', 'aria-hidden' => 'true', 'aria-labelledby' => 'listingDeleteModalLabel', role: 'dialog', tabindex: '-1'}
  .modal-dialog.modal-md{role: 'document'}
    = form_tag delete_admin2_listings_manage_listings_path, method: :delete, remote: true, class: %i[modal-content] do
      = hidden_field_tag :id, '', id: :listing_delete_id
      .modal-header
        %h2#listingDeleteModalLabel.modal-title
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', type: :button}
          %span{'aria-hidden' => 'true'} Ã—
      .modal-body
        = t('admin2.manage_listings.delete_info_text')
      .modal-footer
        = link_to t('admin2.manage_listings.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
        = button_tag t('admin2.manage_listings.delete_confirm'), class: %i[btn btn-negative]
