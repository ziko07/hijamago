.list-group-item.nested-2{data: {id: subcategory.id}}
  .nestedItemWrapper
    .categoryName= subcategory.display_name(I18n.locale)
    .actions
      %span.handle-move{'aria-hidden' => true, data: {intercom_target: 'Reorder category'}}
      - if !subcategory.can_destroy?
      - elsif subcategory.remove_needs_caution?
        = link_to remove_popup_admin2_listings_category_path(subcategory), data: { intercom_target: 'Delete category' }, remote: true do
          %span.remove
      - else
        = link_to '#', class: 'remove-category', data: { intercom_target: 'Delete category', url: admin2_listings_category_path(subcategory), caption: t('admin2.categories.delete_category', category: subcategory.display_name(I18n.locale)) } do
          %span.remove
      = link_to edit_admin2_listings_category_path(subcategory), remote: true do
        %span.edit{data: {intercom_target: 'Edit category'}}
