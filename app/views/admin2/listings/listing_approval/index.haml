- content_for :title do
  = t('admin2.sidebar.listings.listing_approval')

.content-card-header
  %h1.content-card-header-title
    = t('admin2.sidebar.listings.listing_approval')
.content-card-section-container
  = form_for @current_community, url: update_listing_approval_admin2_listings_listing_approval_index_path, html: { class: %i[content-card-section-form], remote: true }, method: :patch do |form|
    %section.content-card-section
      %h2
        = t('admin2.sidebar.listings.listing_approval')
      %p.ingress
        = t('admin2.listing_approval.info_text')
      .form-group
        .form-check
          = form.check_box :pre_approved_listings, class: %i[form-check-input]
          = form.label :pre_approved_listings, t('admin2.listing_approval.pre_approved_listings'), class: %i[form-check-label]
    %section.content-card-terminal
      = render 'admin2/submit_button', caption: t('admin2.save_changes')
