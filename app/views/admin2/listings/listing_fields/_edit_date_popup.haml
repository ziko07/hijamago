#dateEditModal.modal{'data-backdrop' => 'static', 'aria-hidden' => true, 'aria-labelledby' => 'dateEditModalLabel', role: :dialog, tabindex: '-1'}
  .modal-dialog.modal-lg{role: :document}
    .modal-content
      = form_tag update_expiration_admin2_listings_listing_fields_path, remote: true, method: :put, class: %i[content-card-section-form] do |form|
        .modal-header
          %h2.modal-title#dateEditModalLabel= t('admin2.listing_fields.edit_date_title')
          %button.close{'aria-label' => 'Close', 'data-dismiss' => :modal, type: :button}
            %span{'aria-hidden' => true} Ã—
        .modal-body
          .form-group
            = label_tag t('admin2.listing_fields.listing_expiration_enabled_title')
            .form-check
              = check_box_tag :listing_expiration_enabled, :enabled, !@current_community.hide_expiration_date, class: %i[form-check-input]
              = label_tag :listing_expiration_enabled, t('admin2.listing_fields.listing_expiration_enabled'), class: %i[form-check-label]

        .modal-footer
          = link_to t('admin2.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
          = button_tag t('admin2.save_changes'), class: %i[btn btn-primary]
