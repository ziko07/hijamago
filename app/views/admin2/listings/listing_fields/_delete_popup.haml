#listingFieldsDeleteModal.modal{'data-backdrop' => 'static', 'aria-hidden' => true, 'aria-labelledby' => 'listingFieldsDeleteModalLabel', role: :dialog, tabindex: '-1'}
  .modal-dialog.modal-md{role: :document}
    .modal-content
      .modal-header
        %h2#listingFieldsDeleteModalLabel.modal-title
          = t('admin2.listing_fields.delete_title', name: custom_field.name(I18n.locale))
        %button.close{'aria-label' => 'Close', 'data-dismiss' => :modal, type: :button}
          %span{'aria-hidden' => true} Ã—
      .modal-body
        = t('admin2.listing_fields.delete_info_text', name: custom_field.name(I18n.locale))
      = form_tag admin2_listings_listing_field_path(custom_field), method: :delete, class: %i[modal-footer] do
        = link_to t('admin2.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
        = button_tag t('admin2.listing_fields.delete_listing_field'), class: %i[btn btn-negative]
