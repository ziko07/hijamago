.field-data.nested.custom-field-list-row{data: {id: custom_field.id}}
  .col.col-lg-6{data: {intercom_target: custom_field.name(I18n.locale)}}
    = custom_field.name(I18n.locale)
  .col.col-lg-4
    = field_type_translation(custom_field.type)
  .actions.col
    %span.handle-move{"aria-hidden" => "true", data: {intercom_target: 'Reorder listing field'}}
    = link_to delete_popup_admin2_listings_listing_field_path(custom_field), data: {intercom_target: 'Delete listing field'}, remote: true, class: %i[custom-fields-action-remove] do
      %span.remove
    = link_to edit_admin2_listings_listing_field_path(custom_field), data: {intercom_target: 'Edit listing field'}, remote: true, id: "edit_custom_field_#{custom_field.id}", class: %i[custom-fields-action-edit] do
      %span.edit
