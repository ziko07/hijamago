#listingFieldsAddModal.modal{'data-backdrop' => 'static', 'aria-hidden' => true, 'aria-labelledby' => 'listingFieldsModalLabel', role: :dialog, tabindex: '-1'}
  .modal-dialog.modal-lg{role: :document}
    .modal-content
      .content-card-section-form
        .modal-header
          %h2#listingFieldsAddModalLabel.modal-title
            = t('admin2.listing_fields.add_title')
          %button.close{'aria-label' => 'Close', 'data-dismiss' => :modal, type: :button}
            %span{'aria-hidden' => true} Ã—
        .modal-body
          .form-group
            = label_tag :field_type, t('admin2.listing_fields.new_field_type')
            = select_tag :field_type, options_for_select(custom_field_dropdown_options(CustomField::VALID_TYPES)), class: %i[form-control], data: {url: new_admin2_listings_listing_field_path}
          #body_type
        .modal-footer
          = link_to t('admin2.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
          = button_tag t('admin2.listing_fields.save_add_listing_field'), class: %i[btn btn-primary submit-listing-field-form], type: :button, disabled: true
